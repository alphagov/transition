<%# Render a changeset hash, but only one level deep. %>

<% if version.changeset.any? %>
  <table class="changes table table-bordered table-condensed">
    <tbody>
    <% version.changeset.each_pair do |field, change| %>
      <tr>
        <td class="field-name"><%= field.titleize %></td>
        <td class="old-value"><%= value_or_blank(change[0]) %></td>
        <td class="becomes"></td>
        <td class="new-value"><%= value_or_blank(change[1]) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
