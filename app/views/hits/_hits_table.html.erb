<table class="hits table table-bordered">
  <thead>
  <tr>
    <th class="status">HTTP<br/>Status</th>
    <th>Path</th>
    <th class="count">Count</th>
    <% if current_user.can_edit?(@site.organisation) %>
      <th class="action">Action</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% max = hits.first.count %>

  <% hits.each do |hit| %>
    <tr>
      <td class="status"><%= hit.http_status %></td>
      <td class="relative">
        <%= render partial: 'bar_chart_row', locals: { count: hit.count, max: max, status: hit.http_status } %>
        <span class="path"><%= link_to_hit(hit) %></span>
      </td>
      <td class="count"><%= number_with_delimiter hit.count %></td>
      <% if current_user.can_edit?(@site.organisation) %>
        <td class="action">
          <%= link_to 'Check mapping', site_mapping_find_path(@site, path: hit.path), class: 'btn btn-mini' %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
