<li class="if-no-js-hide filter-by-path">
  <% if @path_contains.present? %>
    <%= hits_filter_remove_option_link(@site, 'Path', :path_contains) %>
  <% else %>
    <%= filter_option_link(filter_site_hits_path(@site), 'Path') %>
    <div class="dropdown-menu dropdown-text-input" role="dialog" id="filter-by-path">
      <%= form_tag(site_hits_path(@site), method: 'get', role: 'form', class: 'form') do %>
        <%= render partial: 'hits/filter/by_path_field', locals: { single_filter_form: true, button_text: 'Filter' } %>
      <% end %>
    </div>
  <% end %>
</li>
