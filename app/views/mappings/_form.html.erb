<%= form_for @mapping, url: polymorphic_url([@site, @mapping]) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <% if @mapping.persisted? # we're editing, show the example URL  %>
    <%= label_tag :old_url, 'Old URL' %>
    <%= example_url(@mapping, include_host: true, class: 'span7') %>
    <hr>
  <% else %>
    <%= f.label :path %>
    http://<%= @site.default_host.hostname %><%= f.text_field :path, class: 'span8' %>
  <% end %>

  <%= f.label :http_status, 'HTTP Status' %>
  <%= f.select :http_status, options_for_supported_statuses %>

  <%= f.label :new_url, 'New URL' %>
  <%= f.text_field :new_url, class: 'span8' %>

  <%= f.label :suggested_url, 'Suggested URL' %>
  <%= f.text_field :suggested_url, class: 'span8' %>

  <%= f.label :archive_url, 'Archive URL' %>
  <%= f.text_field :archive_url, class: 'span8' %>

  <hr>

  <%= f.submit 'Save mapping', class: 'btn btn-success' %>
<% end %>
