<% content_for(:page_title, 'Confirm new mappings') %>

<% breadcrumb(:new_mappings_confirmation, @site) %>

<div class="page-title-with-border">
  <h1>
    <span class="small"><%= @site.default_host.hostname %></span>
    Confirm new mappings
  </h1>
</div>

<%= form_tag create_multiple_site_mappings_path(@site) do %>
  <%= hidden_field_tag 'mappings_batch_id', @batch.id %>

  <% if params[:return_path].present? %>
    <%= hidden_field_tag 'return_path', params[:return_path] %>
  <% end %>

  <% if @batch.entries.with_existing_mappings.any? %>
    <div class="alert alert-warning">
      <h4>Weâ€™ve found <%= pluralize(@batch.entries.with_existing_mappings.count, "existing mapping") %> for the paths entered</h4>
      <%= label_tag :update_existing_false, class: 'radio-inline' do %>
        <%= radio_button_tag 'update_existing', 'false', true %> Ignore existing mappings
      <% end %>
      <%= label_tag :update_existing_true, class: 'radio-inline' do %>
        <%= radio_button_tag 'update_existing', 'true' %> Overwrite existing mappings
      <% end %>
    </div>
  <% else %>
    <%= hidden_field_tag "update_existing", "false" %>
  <% end %>

  <h2 class="add-bottom-margin">
    <%= "#{ http_status_name(@batch.http_status) }" %> paths
    <% if @batch.http_status == '301' %>
      <br />
      <span class="subtitle">
        to <%= link_to @batch.new_url, @batch.new_url, class: 'breakable' %>
      </span>
    <% end %>
  </h2>

  <%= hidden_field_tag "http_status", @batch.http_status %>
  <% if @batch.http_status == '301' %>
    <%= hidden_field_tag "new_url", @batch.new_url %>
  <% end %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr class="table-header">
        <th><%= pluralize(number_with_delimiter(@batch.entries.size), "old path") %> from <%= @site.default_host.hostname %></th>
      </tr>
    </thead>
    <tbody>
      <% @batch.entries.each do |entry| %>
        <% existing_mapping = entry.mapping %>
        <tr>
          <td <% if existing_mapping %>class="warning"<% end %>>
            <strong><%= link_to entry.path, entry.old_url, class: 'breakable' %></strong>
            <span class="text-muted">
              <% if existing_mapping %>
                <% if existing_mapping.redirect? %>
                  currently redirects to <%= link_to existing_mapping.new_url, existing_mapping.new_url, class: 'link-muted breakable' %>
                <% elsif existing_mapping.archive? %>
                  currently archived
                <% end %>
              <% end %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render partial: 'tag_list_field', locals: { bulk_tagger: @batch } %>

  <%= button_tag 'Save', class: 'btn btn-success' %>
<% end %>
